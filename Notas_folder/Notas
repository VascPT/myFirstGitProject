  int x = 1;
  int y = 5;

    if( abc = 'a' ){
        cout << "abc é igual a a" << endl;
    }else{
        cout << "abc é diferente de a" << endl;
    }

    int x = 1;
    int y = 5;

    if( x == 1 || y == 5){
        cout << "um deles bate certo" << endl;
    }else{
        cout << "nop..." << endl;
    }

}

else if(texto) (só é executada se a afirmação anterior for falsa)

int main(){
    
    int x = 1;
    int y = 5;
    int z = 3;

    if( x == 2 ){
        cout << "x é igual a dois" << endl;
    }else if(y == 3){
        cout << "y é igual a três" << endl;
    }else if(z == 4){
        cout << "z é igual a quatro" << endl;
    }else{
        cout << "Nenhum dos valores é igual a 2, 3 ou 4" << endl;
    }

}

int time = 20;
string result = (time < 18) ? "Good day." : "Good evening.";
cout << result; 
(maneira resumida de fazer if)


int day;
cout << "Digite um número de 1 a 3: ";
cin >> day;

 switch (day){
     case 1:
       cout << "Domingo" << endl;
       break;
     case 2:
       cout << "Segunda" << endl;
       break;
     case 3:
       cout << "Terça" << endl;
       break;
     default:
       cout << "Dia inválido" << endl;
 }
 -----------------------------------------------------------------------------------------------------------------------

  ++
  x = 1
  x++ = x = 2
  x++ (incrementa 1)

  int main(){

    int x = 0;

    while (x <= 10) {
        cout << x << "Loop infinito" << endl;
    }

    return 0;
  }

  int main(){

    int x = 0;

    do {
        cout << x << "Loop infinito" << endl;
    } while (x <= 10);

    return 0;
  }

  #include <iostream>
  
  using namespace std;

  int main(){
    
    for (int x = 0 ; x <= 10 ; x++ ){
        cout << "Hello, World!" << endl;
    }
  }
